{
	"name": "chialisp-unittest",
	"icon": "https://github.com/prozacchiwawa/vs-code-chialisp-test-adapter/raw/main/icon.png",
	"publisher": "prozacchiwawa",
	"repository": "https://github.com/prozacchiwawa/vs-code-chialisp-test-adapter",
	"displayName": "chialisp-unittest",
	"description": "Run chialisp_dev_utility unit tests",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:chialisp-unittest.run-tests"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "chialisp-unittest.run-tests",
				"title": "Run Chialisp Tests"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"vscode-test-adapter-api": "^1.9.0",
		"vscode-test-adapter-util": "^0.7.1"
	}
}
